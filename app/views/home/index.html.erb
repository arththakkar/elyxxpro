<section class="section section-login" id="top">
	<div class="alert alert-danger" role="alert" id="error_login" style="display: none; width: 30%; margin: auto; z-index: 1111;">
	  Invalid email id or password.
	</div>

	<div class="alert alert-warning" role="alert" id="warning_message" style="display: none; width: 40%; margin: auto; z-index: 1111;">
	  Please login to access Gallery. Contact admin to get credentials.
	</div>

	<div class="col-sm-12 signup text-right">
		<h2>Not a member? <a href="#">Sign-up</a></h2>
	</div>

	<!-- LOGIN FORM -->
	<div class="row justify-content-center login_form">
		<div class="col-sm-6 col-md-4 text-center">
			<form>
				<div class="form_field">
					<label>Email Address</label>
					<input type="text" name="email" placeholder="example@email.com" autocomplete="off" id="email_address">
				</div>

				<div class="form_field">
					<label>Password</label>
					<input type="password" name="password" placeholder="********" id="password">
				</div>

				<div class="form_field">
					<button id="login_btn" onclick="return false;">Login</button>
				</div>							
			</form>
		</div>
	</div>

	<div class="row justify-content-center feedback_form" style="display: none;">

		<div class="col-sm-10 text-center">
			<form class="row">
				<div class="col-sm-12 text-center">
					<p>Thank you for visiting Elyxx! Please submit your feedback regarding the MVP, its functionality, and your overall perception of the website below.</p>
				</div>

				<div class="col-sm-6">
					<div class="form_field">
						<label>Email Address</label>
						<input type="text" name="email" placeholder="demoaddress@email.com" id="feedback_email">
					</div>

					<div class="form_field">
						<button id="submit_click" onclick="return false;">Submit Feedback</button>
					</div>
				</div>

				<div class="col-sm-6">
					<div class="form_field">
						<textarea placeholder="Enter your text here" id="feedback"></textarea>
					</div>
				</div>
			</form>
		</div>

	</div>
	<!-- LOGIN FORM CLOSED -->
	<div id="login-to-home" onclick="vertical_button_click(this.id);">Home</div>
</section>

